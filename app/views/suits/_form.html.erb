<% if @suit.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
    <% @suit.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @suit do |f| %>
   <p>
       <%= f.label :number %><br/>
       <%= f.text_field :number%>
   </p>
   <p>
       <%= f.label :description %><br/>
       <%= f.text_area :description%>
   </p>
   <p>
       <%= f.submit %>
   </p>
<% end %>
